---
const { title, desc, img, link } = Astro.props;
---
<a href={link} target="_blank" class="group relative block bg-primary/60 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
  <img src={img} alt={title} class="w-full h-40 object-cover group-hover:scale-105 transition-transform duration-300" />
  <div class="p-4 space-y-2">
    <h3 class="text-lg font-semibold text-accent group-hover:underline">{title}</h3>
    <p class="text-sm text-textSecondary">{desc}</p>
  </div>
</a>
